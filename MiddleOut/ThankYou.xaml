<UserControl x:Class="MiddleOut.ThankYou"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="331.256">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" MinWidth="200" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Text="Thank you!" FontSize="30" Style="{StaticResource Heading2}" />
            <TextBlock HorizontalAlignment="Center" Text="We will contact you shortly!" FontSize="18"/>
        </StackPanel>

        <Button x:Name="nextPage" HorizontalAlignment="Center" Grid.Row="1" Content="Return to Home" Width="137" Height="26" Click="nextPage_Click"/>

    </Grid>
</UserControl>
